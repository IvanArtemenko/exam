.post
  margin-bottom 25px

  &-thumbnail
    position relative

    & > img
      width 100%
      max-height 270px

    .post-permalink
      position absolute
      top 0
      right 0
      color black
      padding 5px 10px
      background-color white
      border-top 1px solid $border-gray
      border-right 1px solid $border-gray

      & > i
        myTransition()

      &:hover > i
        color $primary-color

  &-body
    border 1px solid $border-gray
    border-top 0

  .entry-header

    .entry-title
      margin 0
      padding 10px

      & > a
        color black
        font-weight bold
        font-size 18px
        myTransition()

        &:hover
          color $primary-color

  .entry-text
    padding 10px

  .entry-footer
    display flex
    justify-content center
    align-items center
    border-top 1px solid $border-gray

    & > p
      margin 0
      padding 10px